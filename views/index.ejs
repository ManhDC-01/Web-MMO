    </div>

    <!-- Banner PHẢI -->
    <div class="d-none d-xl-block text-center"
        style="position: fixed; top: 120px; right: 10px; width: 160px; height: 600px; z-index: 999;">
        <script type="text/javascript">
            atOptions = {
