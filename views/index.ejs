            };
        </script>
        <script type="text/javascript" src="//pawgleamed.com/9638ecf9a048551f6eaedf465148c24f/invoke.js"></script>
    </div>

    <!-- Native Banner: nằm ngay dưới tiêu đề -->
    <div class="my-4 d-flex justify-content-center">
        <div class="bg-light p-3 rounded shadow-sm" style="min-width: 320px; max-width: 728px; width: 100%;">
            <script async="async" data-cfasync="false"
                src="//pl26299766.effectiveratecpm.com/d944cbb92e0d78aaab9c8318257f32af/invoke.js"></script>
            <div id="container-d944cbb92e0d78aaab9c8318257f32af"></div>
        </div>
