    <!-- Banner TRÁI -->
    <div class="d-none d-xl-block text-center"
        style="position: fixed; top: 120px; left: 10px; width: 160px; height: 600px; z-index: 999;">
        <script type="text/javascript">
            atOptions = {
                'key': '9638ecf9a048551f6eaedf465148c24f',
                'format': 'iframe',
                'height': 600,
                'width': 160,
