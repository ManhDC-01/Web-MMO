<main class="container mt-4">
    <div class="d-flex align-items-center">

        <!-- Thêm Bootstrap vào -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    </div>

    <main class="container mt-4">
        <div class="d-flex align-items-center justify-content-center">
            <h1>HOT JAPANESE IDOL</h1>
        </div>
        <!-- 
        <h2 class="mt-4 text-center">Latest Videos</h2> -->

        <!-- Container chính, thêm text-center để căn giữa -->
        <div class="container text-center">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-4 g-3">
                <!-- <div class="row justify-content-center"> Căn guiữa -->
                <% videos.forEach(function(video) { %>
                    <% if (video.thumbnail && !video.thumbnail.includes('logo')) { %>
                        <div class="col-md-2 col-sm-4 col-6">
                            <div class="card mb-4">
                                <img src="<%= video.thumbnail %>" class="card-img-top" alt="Thumbnail" width="200"
                                    height="200" style="object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title text-center">
                                        <%= video.title %>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% }); %>
            </div>
        </div>

    </main>