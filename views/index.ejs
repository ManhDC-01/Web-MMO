    <!-- Danh sách ảnh -->
    <div class="container text-center">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-4 g-3">
            <% videos.forEach(function(video) { %>
                <% if (video.thumbnail && !video.thumbnail.includes('logo')) { %>
                    <div class="col-md-2 col-sm-4 col-6">
                        <div class="card mb-4">
                            <!-- Link direct quảng cáo -->
                            <a href="https://www.effectiveratecpm.com/hsc2y9xkpg?key=74cd8a13365ef6197198e20829aff5de"
                                target="_blank" rel="noopener noreferrer">
                                <img src="<%= video.thumbnail %>" class="card-img-top" alt="Thumbnail" width="200"
                                    height="200" style="object-fit: cover;">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title text-center">
                                    <%= video.title %>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <% } %>
                        <% }); %>
        </div>
    </div>

</main>